{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('styles/account.css') }}">
{% endblock %}

{% block main %}
<main id="account">
    <div class="account-container">
        <!-- Section Avatar et Informations -->
        <div class="profile-section">
            <div class="avatar">
                <img src="{{ asset('images/avatar.jpg') }}" alt="Avatar" class="avatar-img">
            </div>
            <div class="info">
                <h2>{{ user.firstName }} {{ user.lastName }}</h2>
            </div>
        </div>

        <!-- Section Options du compte -->
        <div class="options-grid">
            <div class="option">
                <button class="option-btn">Modifier le profil</button>
            </div>
            <div class="option">
                <button class="option-btn">Historique des transactions</button>
            </div>
            <div class="option">
                <button class="option-btn">Paramètres de sécurité</button>
            </div>
            <div class="option">
                <button class="option-btn">Déconnexion</button>
            </div>
        </div>
    </div>

    <div class="accounts-list">
        <h3>Mes Comptes</h3>
        <ul>
            {% for account in user.bankAccounts %}
                <li>
                    <div class="account-item">
                        <span class="account-name">{{ account.name }}</span>
                        <span class="account-solde">{{ account.solde | number_format(2, ',', ' ') }} €</span>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</main>
{% endblock %}
