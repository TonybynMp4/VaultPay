{% extends 'base.html.twig' %}

{% block title %}Historique des Transactions{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('styles/transaction/history.css') }}">
{% endblock %}


{% block main %}
<main>
<!-- Section du compte -->
    <div class="account-summary">
        <h2>{{ account.name }}</h2>
        <p class="available-balance">IBAN: {{ account.id }}</p>
        <p class="balance">{{ account.balance | number_format(2, ',', ' ') }}€</p>
    </div>

    <h1>Historique des Transactions</h1>

    {% if transactions is empty %}
        <p>Aucune transaction trouvée.</p>
    {% else %}
        <div class="transactions-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Émetteur</th>
                        <th>Destinataire</th>
                        <th>Montant</th>
                        <th>Type</th>
                        <th>Libellé</th>
                    </tr>
                </thead>
                <tbody>
                    {% for transaction in transactions %}
                        <tr>
                            <td>{{ transaction.date|date('d/m/Y H:i') }}</td>
                            <td>
                                {{ transaction.fromAccount
                                ? transaction.fromAccount.getUser().getFirstname ~ ' ' ~ transaction.fromAccount.getUser().getLastname
                                : 'Non défini' }}
                            </td>
                            <td>
                                {{ transaction.toAccount
                                ? transaction.toAccount.getUser().getFirstname ~ ' ' ~ transaction.toAccount.getUser().getLastname
                                : 'Non défini' }}
                            </td>
                            <td class="{{ transaction.amount > 0 ? 'positive' : 'negative' }}">
                                {{ transaction.amount }}
                            </td>
                            <td>
                                {% if transaction.type == 0 %}
                                    Virement
                                {% elseif transaction.type == 1 %}
                                    Dépôt
                                {% elseif transaction.type == 2 %}
                                    Retrait
                                {% else %}
                                    Inconnu
                                {% endif %}
                            </td>
                            <td>{{ transaction.label }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</main>
{% endblock %}
