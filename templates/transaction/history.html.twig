{% extends 'base.html.twig' %}

{% block title %}Mes Comptes{% endblock %}

{% block main %}
<main>
    <!-- Section Résumé des Actifs -->
    <div class="total-assets">
        <h2>Actifs Totaux</h2>
        <p class="total-balance">€ {{ totalbalance | number_format(2, ',', ' ') }}</p>
    </div>

    <!-- Liste des Comptes -->
    <div class="accounts-container">
        {% for account in accounts %}
            <div class="account-card">
                <h3>{{ account.name }}</h3>
                <p class="balance">€ {{ account.balance | number_format(2, ',', ' ') }}</p>
                <p class="account-details">{{ account.type }} - ****{{ account.id | slice(-4) }}</p>
                <a href="{{ path('transaction_history_account', { id: account.id }) }}" class="view-transactions-btn">
                    Voir les transactions
                </a>
            </div>
        {% endfor %}
    </div>
</main>
{% endblock %}
